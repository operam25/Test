<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/l"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/background_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.42">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/i1"
                        android:tint="#f6ee19"
                        android:tintMode="multiply"
                        android:src="@drawable/i1"
                        android:scaleType="fitXY"
                        android:clickable="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.50">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingRight="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"><ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/i2"
                        android:tint="#f6ee19"
                        android:tintMode="multiply"
                        android:src="@drawable/i2"
                        android:scaleType="fitXY"
                        android:clickable="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:padding="0dp"
                        android:layout_weight="0.85"><ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/i3"
                        android:scaleType="fitXY"
                        android:id="@+id/i3"
                        android:tint="#f6ee19"
                        android:tintMode="multiply"
                        android:clickable="true" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="250dp"

                    android:layout_weight="0.08"><ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/i4"
                    android:tint="#f6ee19"
                    android:tintMode="multiply"
                    android:src="@drawable/i4"
                    android:scaleType="fitXY"
                    android:clickable="true" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="0dp"
                android:visibility="visible"><ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/i5"
                android:src="@drawable/i5"
                android:scaleType="fitXY"
                android:tint="#f6ee19"
                android:tintMode="multiply"
                android:clickable="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="0dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.625"><ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/i6"
                    android:tint="#f6ee19"
                    android:tintMode="multiply"
                    android:src="@drawable/i6"
                    android:scaleType="fitXY"
                    android:clickable="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"

                    android:layout_weight="0.375"><ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/i7"
                    android:tint="#f6ee19"
                    android:tintMode="multiply"
                    android:src="@drawable/i7"
                    android:scaleType="fitXY"
                    android:clickable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context="in.co.ismdhanbad.myapplication.MainActivity">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Broadcast"
                    android:id="@+id/createHotspotBtn"
                    android:background="@android:color/holo_blue_dark"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/createHotspotBtn"
                    android:text="Receive"
                    android:id="@+id/connectBtn"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>



